<div class="box">
    <article class="media">
        <div class="media-content">
            <div class="content">
                <p>
                    <strong><%= comment.name %>: </strong><%= comment.comment %>
                </p>
            </div>
        </div>

        <%= button_to 'Delete', [comment.post, comment], method: :delete, class: "button is-danger", 
            form: {data: { turbo_confirm: "Are you sure?" }} %>
    </article>
</div>